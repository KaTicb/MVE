{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "ninja-clang-debug",
      "displayName": "ninja-debug",
      "description": "Debug build with assertions, debug info, and additional debugging options.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/.build/ninja-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_FLAGS": "-Og -g -Wall -Wextra -Wpedantic -Wconversion -Wno-unused-function -fmodules-ts",
        "CMAKE_C_FLAGS": "-Og -g -Wall -Wextra -Wpedantic -Wconversion -Wno-unused-function",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CXX_FLAGS_DEBUG": "-fsanitize=address,undefined",
        "CMAKE_C_FLAGS_DEBUG": "-fsanitize=address,undefined"
      }
    },
    {
      "name": "ninja-clang-release",
      "displayName": "ninja-clang-release",
      "description": "Release build with aggressive optimizations and without assertions.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/.build/ninja-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_CXX_FLAGS": "-Ofast -DNDEBUG -march=native",
        "CMAKE_C_FLAGS": "-Ofast -DNDEBUG -march=native"
      }
    },
    {
      "name": "msvc-debug",
      "displayName": "MSVC Debug",
      "description": "Debug build with assertions, debug info, and additional debugging options.",
      "generator": "Visual Studio",
      "binaryDir": "${sourceDir}/.build/msvc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "description": "Release build with aggressive optimizations and without assertions.",
      "generator": "Visual Studio",
      "binaryDir": "${sourceDir}/.build/msvc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_STANDARD": "23"
      }
    }
  ]
}